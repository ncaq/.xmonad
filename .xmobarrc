Config { font = "xft:Ricty:antialias=true"
       , bgColor = "#002b36"
       , fgColor = "#839496"
       , position = Static
       { xpos   = 0
       , ypos   = 0
       , width  = 1820
       , height = 16
       }
       , lowerOnStart = False
       , commands = [ Run StdinReader
                    , Run Cpu [] 100
                    , Run Memory ["-t", "Mem: <used>M"] 100
                    , Run Swap [] 100
                    , Run Date "%F %T" "date" 10
                    ]
       , sepChar = "%"
       , alignSep = "{}"
       , template = "%StdinReader% {} %cpu% %memory% %swap% %date%"
       }
