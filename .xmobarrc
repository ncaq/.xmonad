Config { font = "xft:Ricty"
       , bgColor = "#002b36"
       , fgColor = "#839496"
       , position = Top
       , lowerOnStart = False
       , commands = [ Run Date "%m/%d/%a %H-%M-%S" "date" 10
                    , Run Cpu ["-t","idle=<idle>%"] 100
                    , Run Memory ["-t","used=<used>"] 100
                    , Run BatteryP ["BAT0"] ["-t" , "wat:<watts> battery:<left>%/<timeleft>"] 600
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "{}"
       , template = "%StdinReader% {} %cpu% %memory% %battery% <fc=#b58900>%date%</fc>"
       }
